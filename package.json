{
    "name": "simple-calculator",
    "description": "A simple webapp to see how testing works",
    "private": true,
    "scripts": {
        "start": "npm run start --workspaces",
        "format": "npm run format --workspaces"
    },
    "workspaces": [
        "app/server",
        "app/frontend"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1"
    }
}
